<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SolarTrackerNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_750</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorAccent">@color/blue</item>
    </style>

    <style name="Theme.SolarTrackerActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_750</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
    </style>

    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:width">26dp</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@color/black_750</item>
        <item name="android:backgroundTint">@color/black_750</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:colorPrimary">@color/white</item>
    </style>

</resources>